<p id="notice"><%= notice %></p>

<h1>Purchases</h1>

<table>
  <thead>
    <tr>
      <th>Stock primary</th>
      <th>Purchase date</th>
      <th>Days</th>
      <th>Dollar rate</th>
      <th>Bill present</th>
      <th>Pending amount</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.stock_primary_id %></td>
        <td><%= purchase.purchase_date %></td>
        <td><%= purchase.days %></td>
        <td><%= purchase.dollar_rate %></td>
        <td><%= purchase.bill_present %></td>
        <td><%= purchase.pending_amount %></td>
        <td><%= purchase.amount %></td>
        <td><%= link_to 'Show', purchase %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

