<style>
table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
  text-align: center;
  padding: 5px;
}
</style>
<% total, total_weight_loss = 0, 0 %>
<table>
  <thead>
    <tr>
      <th>Expense Type</th>
      <th>Amount</th>
      <th>On date</th>
      <th>Weight loss</th>
    </tr>
  </thead>
  <tbody>
    <% stock.expenses.each do |expense| %>
    <tr>
      <td><%= expense.expense_type.capitalize %></td>
      <td><b>Rs <%= expense.amount.to_s %></b></td>
      <td><%= expense.created_at&.strftime('%d %b %Y %l:%M %p')%></td>
      <td><%= expense.weight_loss.to_s %></td>
    </tr>
    <% total += expense.amount.to_d %>
    <% total_weight_loss += expense.weight_loss.to_f %>
    <% end %>
    <tr><td colspan='4'>Total Expenses: Rs. <%= total.to_s %></td></tr>
    <tr><td colspan='4'>Total Weigth loss: <%= total_weight_loss.to_s %></td></tr>
  </tbody>
</table>
<br>
