<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Payment mode</th>
      <th>Date</th>
      <th>Amount</th>
      <th>Notes</th>
      <th>Party come</th>
      <th>Pc acc name</th>
      <th>Party paid</th>
      <th>Pp acc name</th>
      <th>Party</th>
      <th>Purchase</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.payment_mode %></td>
        <td><%= payment.date %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.notes %></td>
        <td><%= payment.party_come %></td>
        <td><%= payment.pc_acc_name %></td>
        <td><%= payment.party_paid %></td>
        <td><%= payment.pp_acc_name %></td>
        <td><%= payment.party %></td>
        <td><%= payment.purchase %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

